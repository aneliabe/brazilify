<div class="worker-show">
  <div class="card worker-card">
    <div class="worker-header">
      <img src="<%= @worker.user.avatar.presence || 'https://placehold.co/96x96' %>" class="worker-avatar">
      <div>
        <h2 class="worker-name"><%= @worker.user.full_name %></h2>
        <small class="worker-sub">
          <i class="fa-solid fa-location-dot"></i>
          <%= [@worker.user.city, @worker.user.country].compact.join(", ") %>
        </small><br>
        <div class="worker-stats">
          <i class="fa-solid fa-star" style="color:#f5b301"></i>
          <%= @worker.average_rating %> (<%= @worker.reviews.count %> avaliações)
        </div>
      </div>
    </div>

    <p class="worker-desc"><%= @worker.description %></p>

    <div class="worker-tags">
      <% if @worker.services.any? %>
        <% @worker.services.each do |s| %>
          <span class="btn"><%= s.name %></span>
        <% end %>
      <% else %>
        <small>Sem serviços cadastrados ainda.</small>
      <% end %>
    </div>

    <hr class="my-3">

    <h3>Avaliações (<%= @worker.reviews.count %>)</h3>
    <% if @worker.reviews.any? %>
      <div class="reviews" style="display:flex;flex-direction:column;gap:.8rem;">
        <% @worker.reviews.order(created_at: :desc).each do |r| %>
          <div class="card" style="padding:.8rem;">
            <div style="display:flex;justify-content:space-between;align-items:center;">
              <strong><%= r.user.full_name %></strong>
              <span><i class="fa-solid fa-star" style="color:#f5b301"></i> <%= r.rating %>/5</span>
            </div>
            <p style="margin:.4rem 0 0;"><%= r.comment %></p>
          </div>
        <% end %>
      </div>
    <% else %>
      <small>Sem avaliações ainda.</small>
    <% end %>

    <div class="worker-cta">
      <h2>Book this <%= @worker.user.full_name %></h2>

      <%= simple_form_for @appointment, url: worker_appointments_path(@worker) do |f| %>
        <%= f.input :starts_at, as: :datetime, label: "Start" %>
        <%= f.input :ends_at,   as: :datetime, label: "End" %>
        <%= f.submit "Book", class: "btn btn-primary" %>
      <% end %>
    </div>
    <% if @appointments.exists? %>
      <h2>Your appointments</h2>
      <ul>
        <% @appointments.each do |appointment| %>
          <li>
            <%= link_to appointment.starts_at.strftime("%a %b %e at %l:%M %p"), appointment %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>
