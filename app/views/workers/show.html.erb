<div class="worker-show">
  <div class="card worker-card">
    <div class="worker-header">
      <img src="<%= @worker[:avatar] || 'https://placehold.co/96x96' %>" class="worker-avatar">
      <div>
        <h2 class="worker-name"><%= @worker[:name] %></h2>
        <small class="worker-sub"><%= @worker[:role] %> Â·
          <i class="fa-solid fa-location-dot"></i> <%= @worker[:city] %></small><br>
        <div class="worker-stats">
          <i class="fa-solid fa-star" style="color:#f5b301"></i> <%= @worker[:rating] %>
          (<%= @worker[:reviews] %> reviews)
        </div>
      </div>
    </div>

    <p class="worker-desc"><%= @worker[:description] %></p>

    <div class="worker-tags">
      <% @worker[:services].each do |s| %><span class="btn"><%= s %></span><% end %>
    </div>

    <div class="worker-cta">
      <a href="#" class="see-all-btn">Entrar em contato</a>
    </div>
  </div>
</div>
