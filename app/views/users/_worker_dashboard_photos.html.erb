<% if @worker_profile.services_photos.attached? %>
  <div class="glass-card p-3 p-md-4 mt-3">
    <div class="d-flex align-items-center justify-content-between mb-3">
      <h3 class="h6 fw-bold mb-0">
        <i class="bi bi-images me-2"></i>
        Minha galeria
      </h3>
      <small class="text-muted"><%= @worker_profile.services_photos.count %> fotos</small>
    </div>

    <!-- photo grid -->
    <div class="services-photo-gallery">
      <% @worker_profile.services_photos.each_with_index do |photo, index| %>
        <div class="photo-card"
             data-bs-toggle="modal"
             data-bs-target="#photoModal<%= photo.id %>">
          <div class="photo-wrapper">
            <%= image_tag url_for(photo),
                  class: "photo-image",
                  alt: "Serviço #{index + 1}",
                  loading: "lazy" %>
            <div class="photo-overlay">
              <div class="photo-zoom-icon">
                <i class="fa-solid fa-magnifying-glass-plus"></i>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- modals -->
  <% @worker_profile.services_photos.each_with_index do |photo, index| %>
    <div class="modal fade"
         id="photoModal<%= photo.id %>"
         tabindex="-1"
         aria-hidden="true"
         data-controller="worker-service-photo">
      <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content bg-dark">
          <div class="modal-header border-0 text-white">
            <h5 class="modal-title">Foto <%= index + 1 %> de <%= @worker_profile.services_photos.count %></h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body p-0 text-center position-relative">
            <!-- Navigation Arrows -->
            <% if @worker_profile.services_photos.count > 1 %>
              <% prev_index = index > 0 ? index - 1 : @worker_profile.services_photos.count - 1 %>
              <% next_index = index < @worker_profile.services_photos.count - 1 ? index + 1 : 0 %>
              <% prev_photo = @worker_profile.services_photos[prev_index] %>
              <% next_photo = @worker_profile.services_photos[next_index] %>

              <button class="photo-nav-btn photo-nav-prev"
                      data-bs-target="#photoModal<%= prev_photo.id %>"
                      data-bs-toggle="modal"
                      data-bs-dismiss="modal"
                      aria-label="Foto anterior">
                <i class="fa-solid fa-chevron-left"></i>
              </button>

              <button class="photo-nav-btn photo-nav-next"
                      data-bs-target="#photoModal<%= next_photo.id %>"
                      data-bs-toggle="modal"
                      data-bs-dismiss="modal"
                      aria-label="Próxima foto">
                <i class="fa-solid fa-chevron-right"></i>
              </button>
            <% end %>

            <!-- Zoomable Image Container -->
            <div class="photo-zoom-container">
              <%= image_tag url_for(photo),
                    class: "zoomable-image",
                    style: "max-height: 70vh; width: auto; cursor: zoom-in;",
                    data: {
                      action: "click->worker-service-photo#toggleZoom",
                      "worker-service-photo-target": "image"
                    } %>
            </div>

            <!-- Zoom Instructions -->
            <div class="zoom-instructions">
              <small class="text-light opacity-75">
                <i class="fa-solid fa-magnifying-glass me-1"></i>
                Clique para ampliar • Use as setas para navegar
              </small>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
