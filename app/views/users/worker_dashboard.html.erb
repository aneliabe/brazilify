<div class="container py-4" style="max-width: 900px;">
  <div class="card shadow-sm border-0">
    <div class="card-header bg-light d-flex justify-content-between align-items-center">
      <h1 class="h4 m-0">Meu Dashboard</h1>
      <%= link_to "Editar perfil", edit_worker_user_path(@user), class: "btn btn-outline-primary" %>
    </div>

    <div class="card-body">
      <h5>Informações do Prestador</h5>
      <p><strong>CPF:</strong> <%= @worker_profile.cpf %></p>
      <p><strong>Descrição:</strong> <%= @worker_profile.description %></p>

      <h5>Serviços Oferecidos</h5>
      <table class="table">
        <thead>
          <tr>
            <th>Categoria</th>
            <th>Serviço</th>
            <th>Tipo de Serviço</th>
          </tr>
        </thead>
        <tbody>
          <% @worker_services.each do |ws| %>
            <tr>
              <td><%= ws.category.name %></td>
              <td><%= ws.service.name %></td>
              <td><%= ws.service_type.humanize %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
